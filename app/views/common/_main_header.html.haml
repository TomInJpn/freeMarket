%header.header__all
  .header__all__main
    .mainHeader
      %h1.icon
        =link_to root_path do
          = image_tag "FURIMA_logo.svg"
      .searchmain
        %form
          %input#searchInput.searchmain--input{placeholder: "キーワードから探す"}
          %button{type: "submit"}
            .searchmain__icon
              = image_tag "icon_search.png"
      %ul.result-Lists
    .nav
      %ul.listsLeft
        %li.listsLeft__item.listsLeft__item--first
          .category
            = link_to root_path do
              カテゴリー
            .tree.display-None
              .categoryTree
                .categoryTree--item
                  = link_to root_path do
                    レディース
                  .subcatTree
                    .subcatTree--item
                      = link_to root_path do
                        トップス
                      .itemTree
                        .itemTree--item
                          = link_to root_path do
                            Tシャツ
                        .itemTree--item
                          = link_to root_path do
                            シャツ
                    .subcatTree--item
                      = link_to root_path do
                        シャケット
        %li.listsLeft__item.listsLeft__item__second
          = link_to root_path, id: "#brandBtn" do
            ブランド
          %ul.brandsPulldown.display-None
      %ul.lists-Right
        - if user_signed_in?
          %li.lists-Right__item
            = link_to "マイページ", user_path(current_user.id)
        - else
          %li.lists-Right__item
            = link_to "新規会員登録",new_user_registration_path
          %li.lists-Right__item
            = link_to "ログイン",new_user_session_path
