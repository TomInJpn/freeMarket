%body
  %header.single-header
    %h1
      = link_to image_tag("logo.svg"), root_path
    - if params[:controller]=="addresses"&&params[:action]=="new"
      %nav.regiNavi
        %ul
          %li 会員情報
          %li.active 送付先情報
          %li 完了
  .address
    %main
      %section
        %h2.addressHeader 送付先情報入力
        = form_with url:addresses_path do |f|
          .addressContent
            .formGroup.half
              %div
                = f.label "お名前(全角)"
